	<techLevel>Neolithic</techLevel>
	<backstoryCategories> 
   	  <li>VengBeserker</li>
	  <li>VengAltered</li>
	</backstoryCategories>
	<geneticVariance>0.8</geneticVariance>
    <naturalColonyGoodwill>
      <min>-100</min>
      <max>-90</max>
    </naturalColonyGoodwill>
    <allowedArrivalTemperatureRange>
      <min>-60</min>
      <max>35</max>
    </allowedArrivalTemperatureRange>
	<maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
