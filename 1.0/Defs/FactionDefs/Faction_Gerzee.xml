    </pawnGroupMakers>
    <homeIconPath>World/GerzeeBeserkerBaseIcon</homeIconPath>	<!--<expandingIconTexture>World/GerzeeBeserkerBaseIcon</expandingIconTexture>-->
  </FactionDef>
  
  

</Defs>